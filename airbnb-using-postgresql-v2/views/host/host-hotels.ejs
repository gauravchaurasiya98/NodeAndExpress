<%- include('../partials/head-html') %>
<main class="container mx-auto px-4 py-4">
    <section id="hotels">
        <h1 class="text-2xl font-bold mb-4">Registered hotels will appear here:</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% hotels.forEach(hotel => { %>
                <div class="bg-white shadow-lg rounded-lg overflow-hidden relative">
                    <img src="<%= hotel.photoUrl %>" alt="<%= hotel.name %>" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h2 class="text-xl font-semibold mb-2"><%= hotel.name %></h2>
                        <p class="text-gray-600"><%= hotel.location %></p>
                        <p class="text-gray-600">Price: &#8377;<%= hotel.price %> per night</p>
                        <div class="flex items-center mt-2">
                            <span class="text-yellow-500">
                                <%- "&#9733;".repeat(Math.round(hotel.rating)) %>
                            </span>
                            <span class="ml-2 text-gray-600"><%= hotel.rating %>/5</span>
                        </div>
                    </div>
                    <!-- Edit and Delete Buttons -->
                    <div class="absolute bottom-4 right-4 flex flex-col space-y-2">
                        <a href="/host/hotels/<%= hotel.id %>" class="bg-blue-500 text-white px-3 py-2 rounded-md text-sm shadow hover:bg-blue-600">
                            Edit
                        </a>
                        <form action="/host/hotels/<%= hotel.id %>?_method=DELETE" method="POST">
                            <button type="submit" class="bg-red-500 text-white px-3 py-2 rounded-md text-sm shadow hover:bg-red-600">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
</main>
</body>
</html>
