<%- include('partials/head-html') %>
<main class="container mx-auto px-4 py-4">
    <section id="hotels">
        <h1 class="text-2xl font-bold mb-4">Hotels</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% hotels.forEach(hotel => { %>
                <div class="bg-white shadow-lg rounded-lg overflow-hidden">
                    <img src="<%= hotel.photoUrl %>" alt="<%= hotel.hotelName %>" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h2 class="text-xl font-semibold mb-2"><%= hotel.hotelName %></h2>
                        <p class="text-gray-600"><%= hotel.location %></p>
                        <p class="text-gray-600">Price: &#8377;<%= hotel.price %> per night</p>
                        <div class="flex items-center mt-2">
                            <span class="text-yellow-500">
                                <%- "&#9733;".repeat(Math.round(hotel.rating)) %>
                            </span>
                            <span class="ml-2 text-gray-600"><%= hotel.rating %>/5</span>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
</main>
</body>
</html>
