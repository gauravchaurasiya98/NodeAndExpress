<%- include('../partials/head-html') %>
<main class="container mx-auto px-4 py-4">
    <section id="hotels">
        <h1 class="text-2xl font-bold mb-4">Your bookings will appear here:</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% bookings.forEach(booking => { %>
                <div class="border border-gray-200 rounded-lg p-4">
                    <div class="flex justify-between items-center">
                        <h2 class="text-xl font-bold"><%= booking.hotel.name %></h2>
                        <span class="text-sm text-gray-500"><%= booking.hotel.city %></span>
                    </div>
                    <div class="flex justify-between items-center mt-2">
                        <span class="text-sm text-gray-500">Check-in: <%= booking.checkInDate %></span>
                        <span class="text-sm text-gray-500">Check-out: <%= booking.checkOutDate %></span>
                    </div>
                    <div class="flex justify-between items-center mt-2">
                        <span class="text-sm text-gray-500">Total guests: <%= booking.totalGuests %></span>
                        <span class="text-sm text-gray-500">Total rooms: <%= booking.totalRooms %></span>
                    </div>
                    <div class="flex justify-between items-center mt-2">
                        <span class="text-sm text-gray-500">Total price: $<%= booking.totalPrice %></span>
                        <span class="text-sm text-gray-500">Status: <%= booking.status %></span>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
</main>
</body>
</html>
