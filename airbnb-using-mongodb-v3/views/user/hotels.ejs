<%- include('../partials/head-html') %>
<main class="container mx-auto px-4 py-4">
    <section id="hotels">
        <h1 class="text-2xl font-bold mb-4">Hotels</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% hotels.forEach(hotel => { %>
                <div
                    class="bg-white shadow-lg rounded-lg overflow-hidden hover:shadow-xl transition-shadow duration-300 cursor-pointer"
                    onclick="window.location.href='/hotels/<%= hotel._id %>'"
                >
                    <img src="<%= hotel.photoUrl %>" alt="<%= hotel.name %>" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h2 class="text-xl font-semibold mb-2"><%= hotel.name %></h2>
                        <p class="text-gray-600"><%= hotel.location %></p>
                        <p class="text-gray-600">Price: &#8377;<%= hotel.price %> per night</p>
                        <div class="flex items-center justify-between mt-2">
                            <div class="flex items-center">
                                <span class="text-yellow-500">
                                    <%- "&#9733;".repeat(Math.round(hotel.rating)) %>
                                </span>
                                <span class="ml-2 text-gray-600"><%= hotel.rating %>/5</span>
                            </div>
                            <form action="/favourites/<%= hotel._id %>" method="POST">
                                <button type="submit" class="bg-blue-500 text-white px-3 py-1.5 rounded-md text-sm shadow hover:bg-blue-600">
                                    Add to Favourite
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </section>
</main>
</body>
</html>
